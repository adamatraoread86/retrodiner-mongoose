<div id="section">
  <div class="section">
    <div>
      <div>
        <a href="/blog/<%= blogPost.slug %>"
          ><img
            src="/images/<%= blogPost.image %>"
            width="169"
            height="163"
            alt=""
        /></a>
        <h2><a href="/blog/<%= blogPost.slug %>"><%= blogPost.title %></a></h2>
        <h3>Posted by <a href="/blog/user/<%= blogPost.user._id%>"> <%= blogPost.user.firstname %> </a> in</h3>
        <% blogPost.categories.forEach(category => { %>
        <a href="/blog/category/<%= category.slug %>"><span><%= category.name %></span></a>
        <% }) %>

        <p><%= blogPost.content %></p>
        <a href="/blog/<%= blogPost.slug %>" class="price"
          ><%= blogPost.monthAbbreviation %>
          <span><%= blogPost.dayNumber %></span></a
        >
      </div>
    </div>
  </div>
</div>
